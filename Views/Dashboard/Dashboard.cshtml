            </div>
            <div id="dynamicContent" class="container">
                <!-- The form will be dynamically loaded here -->
            </div>


            <!-- Chart Placeholder -->
            <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

            <!-- Table -->
            <h2>Section title</h2>
            <div class="table-responsive">
