@model OC.Models.LoginRequest
@{
    ViewData["Title"] = "Login Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center">Login</h2>
            <form method="post" asp-controller="Login" asp-action="Login" class="needs-validation">
                <div class=" form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="text" id="email" class="form-control" asp-for="Email" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>