@model OC.Models.Administration.NewEmployeeModel

<!DOCTYPE html>
<html lang="fr">
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter un Employé</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
                background-color: #f8f9fa;
            }

            .form-header h1 {
                text-align: center;
                margin-bottom: 20px;
            }

            .form-header h1 {
                font-weight: bold;
                color: #343a40;
            }

            .step-header {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 20px;
                margin-bottom: 20px;
            }

            .step-circle {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #e9ecef;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 16px;
                font-weight: bold;
                color: #343a40;
                transition: all 0.3s ease;
            }

            .step-circle.active {
                background-color: #007bff;
                color: #fff;
            }

            .step-circle.completed {
                background-color: #28a745;
                color: #fff;
            }

            .step-header .step-line {
                flex: 1;
                height: 2px;
                background-color: #e9ecef;
            }

            .step-header .step-line.completed {
                background-color: #28a745;
            }

            .btn {
                width: 120px;
            }

            .btn-next {
                background-color: #007bff;
                color: #fff;
            }

            .btn-next:hover {
                background-color: #0056b3;
            }

            .btn-prev {
                background-color: #6c757d;
                color: #fff;
            }

            .btn-prev:hover {
                background-color: #5a6268;
            }

            .step {
                display: none;
            }

            .step.active {
                display: block;
            }

            .review-item {
                margin-bottom: 15px;
            }

            .review-item label {
                font-weight: bold;
            }

            .review-item span {
                margin-left: 10px;
            }

            .btn-submit {
                background-color: #d3d3d3; /* Grey when disabled */
                color: #fff;
                border: none;
                padding: 10px 20px;
                font-size: 16px;
                border-radius: 5px;
                cursor: not-allowed;
                transition: background-color 0.3s ease, cursor 0.3s ease;
            }

            .btn-submit.enabled {
                background-color: #007bff; /* Blue when enabled */
                color: white;
                cursor: pointer;
            }

            .btn-submit.enabled:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

    </style>
    </head>
    <body>
    <div class="container mt-5">
        <div class="form-header">
            <h1>Ajouter un Employé</h1>
        </div>

        <!-- Step Header -->
        <div class="step-header">
            <div class="step-circle active">1</div>
        </div>

        <form method="post" asp-controller="" asp-action="" id="exportForm">
            <!-- Step 1: Basic Information -->
            <div class="step active">
                <h4>Informations Personnelles</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="FirstName" class="form-label">Prénom</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Entrez le prénom"/>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="LastName" class="form-label">Nom</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Entrez le nom" />
                    </div>
                     <div class="col-md-6 mb-3">
                        <label for="Matricule" class="form-label">Matricule</label>
                        <input asp-for="Matricule" type="text" class="form-control" placeholder="Entrez le matricule" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Sexe" class="form-label">Genre</label>
                            <select asp-for="Sexe" class="form-control">
                                <option value="">Sélectionnez le genre</option>
                                <option value="Male">Masculin</option>
                                <option value="Female">Féminin</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="DOB" class="form-label">Date de Naissance</label>
                            <input asp-for="DOB" type="date" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PhoneNumber" class="form-label">Numéro de Téléphone</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Entrez le numéro de téléphone" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="EmailAddress" class="form-label">Adresse Email</label>
                            <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Entrez l'adresse email" />
                    </div>
                </div>

                <div class="row">
                        <div class="col-md-6 mb-3">
                        <label for="Sifa" class="form-label">Situation Familiale</label>
                        <input asp-for="Sifa" class="form-control" placeholder="Entrez votre Situation familiale" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="LevelStudy" class="form-label">Niveau d'étude</label>
                        <input asp-for="LevelStudy" class="form-control" placeholder="Entrez votre niveau" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="Domaine" class="form-label">Domaine</label>
                        <input asp-for="Domaine" type="text" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                            <label for="HireDate" class="form-label">Date d'embauche</label>
                            <input asp-for="HireDate" type="date" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Grade" class="form-label">Grade</label>
                            <input asp-for="Grade" type="text" class="form-control" placeholder="Entrez votre grade" />
                        </div>
                         <div class="col-md-6 mb-3">
                            <label for="DutyStation" class="form-label">Lieu Affectation</label>
                            <input asp-for="DutyStation" type="text" class="form-control" placeholder="Entrez votre lieu d'Affectation" />
                        </div>
                        
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                            <label for="FonctionEngagement" class="form-label">Fonction</label>
                            <input asp-for="FonctionEngagement" type="text" class="form-control" placeholder="Entrez votre grade" />
                    </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="LastAffectation" class="form-label">Dernière Affectation</label>
                            <input asp-for="LastAffectation" type="date" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="FonctionActuelle" class="form-label">Fonction Actuelle</label>
                            <input asp-for="FonctionActuelle" type="text" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="PosteAffectation" class="form-label">Poste d'Affectation</label>
                            <input asp-for="PosteAffectation" type="text" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Anciennete" class="form-label">Anciennete</label>
                            <input asp-for="Anciennete" type="text" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="GradeActuelle" class="form-label">Grade Actuelle</label>
                            <input asp-for="GradeActuelle" type="text" class="form-control"/>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ProvinceOrigine" class="form-label">Province d'Origine</label>
                            <input asp-for="ProvinceOrigine" type="text" class="form-control"/>
                        </div>
                         
                </div>
            </div>

            <!-- Informations Professionnelles -->
            <div class="step">
                <h4>Informations Professionnelles</h4>
                <div class="row">
                    
            </div>

            <!-- Step 3: Révision -->
            <div class="step">
                <h4>Vérifiez vos informations</h4>
                <div id="reviewContainer"></div>
                <button type="submit" id="subBtn" class="btn btn-primary mb-3">Soumettre</button>

            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-prev">Précédent</button>
                <button type="button" class="btn btn-next">Suivant</button>
            </div>
        </form>
    </body>
</html>
<script>
   document.addEventListener("DOMContentLoaded", function () {
    let currentStep = 0;
    const steps = document.querySelectorAll(".step");
    const stepCircles = document.querySelectorAll(".step-circle");
    const stepLines = document.querySelectorAll(".step-line");
    const prevButton = document.querySelector(".btn-prev");
    const nextButton = document.querySelector(".btn-next");
    const submitButton = document.getElementById("subBtn");

    // Function to show the current step
    function showStep(step) {
        steps.forEach((s, i) => s.classList.toggle("active", i === step));
        stepCircles.forEach((circle, i) => {
            circle.classList.remove("active", "completed");
            if (i < step) circle.classList.add("completed");
            else if (i === step) circle.classList.add("active");
        });
        stepLines.forEach((line, i) => line.classList.toggle("completed", i < step));

        // Update button visibility
        prevButton.style.display = step === 0 ? "none" : "inline-block";
        nextButton.style.display = step === steps.length - 1 ? "none" : "inline-block";
        submitButton.style.display = step === steps.length - 1 ? "inline-block" : "none";
    }

    // Function to navigate between steps
    function nextPrev(n) {
        if (currentStep + n < 0 || currentStep + n >= steps.length) return;
        currentStep += n;
        showStep(currentStep);
    }

    // Attach event listeners to buttons
    prevButton.addEventListener("click", () => nextPrev(-1));
    nextButton.addEventListener("click", () => nextPrev(1));
    submitButton.addEventListener("click", () => alert("Form submitted!"));

    // Initialize the first step
    showStep(currentStep);
});
</script>